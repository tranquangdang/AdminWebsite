@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Models.EF.tblCustomer>

@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-user"></i>&nbsp;Quản lý khách hàng
}


<div class="col-lg-12 form-group">
    <div class="col-md-6">
    </div>
    <div class="col-md-6">
        <div class="col-lg-12 in-gp-tb">
            <div class="input-group">
                <input type="text" value="@ViewBag.SearchString" name="keyword" placeholder="Nhập từ khóa cần tìm kiếm" class="form-control" />
                <span class="input-group-btn">
                    <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
                </span>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 form-group">
    <table class="table table-striped table-hover table-bordered dataTable">
        <tr>
            <th>
                STT
            </th>
            <th>
                Họ và tên
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
                SĐT
            </th>
            <th>
                Email
            </th>
            <th>
                Mật khẩu
            </th>
        </tr>
        @{var i = 1;}
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @i
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pass)
                </td>
            </tr>
            i++;
        }

    </table>
    <div style="text-align: center">
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page, @keyword = @ViewBag.SearchString }))
    </div>
</div>
