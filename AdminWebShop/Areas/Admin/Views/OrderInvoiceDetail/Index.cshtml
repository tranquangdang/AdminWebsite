
@model IEnumerable<Models.EF.tblOrderInvoiceDetail>

<table class="table table-striped table-hover table-bordered dataTable">
    <tr>
        <th>
            Hình ảnh
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Thành tiền
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.tblProduct.ProductImg))
                {
                    <img src="@Url.Content(item.tblProduct.ProductImg)" height="80" width="80" alt="productImg" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tblProduct.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtyOrdered)
            </td>
            <td>
                @{
                    var UnitPrice = String.Format("{0:#,##0₫}", item.tblProduct.UnitPrice);
                }
                @Html.DisplayFor(modelItem => UnitPrice)
            </td>
            <td>
                @{
                    var Amount = String.Format("{0:#,##0₫}", item.Amount);
                }
                @Html.DisplayFor(modelItem => Amount)
            </td>
        </tr>
    }

</table>
<div style="text-align: center">
</div>
